%h2 add new site?
%br
%h4 please input RSS feed URL

= form_for @feed do |f|
  - if @feed.errors.any?
    %div{:class => "alert alert-danger"}
      %ul
        - @feed.errors.full_messages.each do |msg|
          %li= msg

  = f.text_field :url
  = f.submit "add", :class => "btn btn-primary"
  %button{:type => "button", :class => "btn btn-primary"}= link_to "cancel", feeds_path
