<%= link_to 'フィードを追加', new_feed_path %><br />
<% @feeds.each do |feed| %>
  <%= feed.url %>
  <%= link_to "フィードURLを編集", edit_feed_path(feed) %>
  <%= button_to "フィードを削除", feed, method: :delete %>
  <%= feed.title %> <br />
  <% feed.items.each do |item| %>
    <%= item.title %> <br />
    <% if item.body %>
    <%= strip_tags(item.body.truncate(50)) %> <br />
    <% end %>
    <%= link_to "もっと見る", item_path(item) %>
    <br />
  <% end %>
<% end %>
